---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../config';
import {IoLogoGithub } from "react-icons/io"
import PandaFaceIcon from "./icons/pandaface"
import ThemeToggle from './ThemeToggleButton';
---

<header class="fixed w-full pq2 z-20 backdrop-blur-md
">
<div class="mx-auto max-w-3xl">
	<nav class="flex items-center gap-3 text-base">
	<a href="/" class="group">
		<h2 class="font-semibold tracking-tighter p-2 flex items-center
		font-mplus text-lg">
		<PandaFaceIcon/>	
		PandaBoy 
	</h2>
	</a>
	<div class="items-center gap-6 hidden md:flex ">
		<HeaderLink href="/about">About</HeaderLink>
		<HeaderLink href="https://github.com/withastro/astro" target="_blank"
		><IoLogoGithub/>GitHub</HeaderLink>
	</div>
	<div class="flex-1"></div>
	<ThemeToggle />
</nav>
</div>
</header>
<style>
	header {
		margin: 0em 0 2em;
	}
	h2 {
		margin: 0.5em 0;
	}
</style>
